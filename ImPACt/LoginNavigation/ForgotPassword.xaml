<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LoginNavigation.ForgotPassword">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="64, 64, 64, 64">
			<Label Text="Enter your email below to send a verification code" />
            <!-- The entry box where the user enters in their email. -->
            <Entry x:Name="emailEntry" Placeholder="Email" />
            <!-- A button with the text "Send Email" which is mapped to the function "SendEmail" defined on the attached .cs file.-->
            <Button Text="Send Email" Clicked="SendEmail"/>
            <Label x:Name="messageLabel"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>
