<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LoginNavigation.NewPassword">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="64, 64, 64, 64">
            <!-- The Label and both entry boxes for the new Password to be used for the user. -->
            <Label Text="Enter your new password below" />
			<Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="passwordRepeatEntry" Placeholder="Repeat Password" IsPassword="True"/>
            <!-- The "ChangePassword" button that maps to the "ChangePassword" function in the attached .cs file. -->
            <Button Text="Change password" Clicked="ChangePassword"/>
            <Label x:Name="messageLabel"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>
