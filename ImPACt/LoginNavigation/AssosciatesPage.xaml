<?xml version="1.0" encoding="UTF-8"?>
<ContentPage NavigationPage.HasNavigationBar="False"  xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LoginNavigation.AssosciatesPage">
    <ContentPage.ToolbarItems>
		<ToolbarItem Text="Match requests" Clicked="OnMatchRequestsButtonClicked" />
	</ContentPage.ToolbarItems>
    <ContentPage.Content>

        <Grid Margin="24,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*" />
                <RowDefinition Height="0.75*" />
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Associates:"/> 
            <ListView Grid.Row="1" ItemsSource="{Binding Associates}" HasUnevenRows="true" ItemTapped="UserClicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition Width="0.3*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding FullName}" VerticalOptions="End"/>
                                <Label Text="Message > " Grid.Column="1" HorizontalOptions="End" VerticalOptions="End"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Grid.Row="2" VerticalTextAlignment="End" HorizontalTextAlignment="Center" Text= "You haven't made any associates yet" x:Name="noAssociates" IsVisible="False"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
